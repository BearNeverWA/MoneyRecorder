<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/pay_class_wechat"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="微信"
        android:textColor="@color/black_020202"
        android:textSize="12sp" />

    <include layout="@layout/limiter_horizontal" />

    <TextView
        android:id="@+id/pay_class_alipay"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="支付宝"
        android:textColor="@color/black_020202"
        android:textSize="12sp" />

    <include layout="@layout/limiter_horizontal" />

    <TextView
        android:id="@+id/pay_class_bank_card"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="银行卡"
        android:textColor="@color/black_020202"
        android:textSize="12sp" />

    <include layout="@layout/limiter_horizontal" />

    <TextView
        android:id="@+id/pay_class_meal_card"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="饭卡"
        android:textColor="@color/black_020202"
        android:textSize="12sp" />

    <include layout="@layout/limiter_horizontal" />

    <TextView
        android:id="@+id/pay_class_traffic_card"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="交通卡"
        android:textColor="@color/black_020202"
        android:textSize="12sp" />

</LinearLayout>